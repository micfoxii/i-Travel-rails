<h1> Create a New City </h1>

<%= form_for(@city) do |f| %>
    <div>
    <%= f.label :name, "City Name: " %>
    <%= f.text_field :name %>
    </div>

    <p> Select an existing country: </p>

    <div>
    <%= f.collection_select(:country_id, Country.order('name ASC'), :id, :name, :include_blank => true)%>
    </div>

    <p> OR create a new country: </p>

    <div>
        <%= fields_for :country do |c| %>
            <%= c.label :name, 'Country Name: '%>
            <%= c.text_field :name %>
        <% end %>

    </div>

    <%= f.submit %>
<% end %>