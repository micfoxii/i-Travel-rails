<h1> Create a New City </h1>

<%= form_for(@city) do |f| %>
    <div>
    <%= f.label :name, "City Name: " %>
    <%= f.text_field :name %>
    </div>

    <div>
    <%= f.collection_select :country_id, Country.all, :name, include_blank: => true %>
    </div>

    <%= f.submit %>
<% end %>