<h1><%= @review.title %></h1> 
<h5><% if @review.user != current_user %> 
        By: <%= @review.user.name %>
    <% end %>
</h5><br>
<%# REFACTORED FROM TWO LINES %> <%# @review.city.name%> <%# @review.city.country.name %>
<h4> <%= @review.city.city_state_country %>  </h4>

<p>
Rating: <%= @review.rating %><br>
<br>
<%= @review.content %>
</p>

<% if @review.user == current_user %>

        <%= link_to "Edit Review", edit_review_path(@review) %>
        <%= link_to "Delete Review", review_path, :method => 'delete' %>

<% end %>