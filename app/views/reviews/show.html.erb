<h1> <%= @review.city.city_state_country %> <%= @review.city.name %> </h1>
<h4> <%= @review.city.country.name %> </h4>

<p>
<%= @review.rating %><br>
<%= @review.title %><br>
<%= @review.content %>
</p>

<% if @user == current_user %>

        <%= link_to "Edit Review", edit_user_review_url %>
        <%= link_to "Delete Review", user_review_path, :method => 'delete' %>

<% end %>